@{
  Layout = "_Layout";
}

@using Salon.Models
@model List<Salon.Models.Client>
<h1>Clients</h1>
@if (@Model.Count == 0)
{
  <h3>No clients have been added.</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId}) | @client.Stylist.StylistName</li>
}
<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Back to stylists", "StylistIndex", "Stylists")</p>
